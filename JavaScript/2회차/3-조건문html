    <body>
        <h1></h1>
        <p></p>
        <script>
            const h1 = document.querySelector('h1')
            const p = document.querySelector('p')
            // let age = prompt('몇년생입니까? 4자리로 입력하세요.')
            // if(age > 2004){
            //     console.log("미성년자입니다.")
            // }
            // else {console.log("성인입니다.")}

            let age = prompt ('태어난 년도를 4자리로 입력하시오.')
            if(age>2004){
                console.log=(`당신이 태어난 년도는 ${age}년으로 성인입니다.`)
            }
            else if(age<1950){
                console.log=(`당신이 태어난 년도는 ${age}년으로 노인입니다.`)
            }
            else if(age>2023){
                console.log=(`당신이 태어난 년도는 ${age}년으로 아직 태어나지 않았습니다. 당신은 정자나 난자입니까?`)
            }
            else{
                console.log=(`당신이 태어난 년도는 ${age}년으로 미성년자입니다.`)
            }
        </script>
    </body>
</html>